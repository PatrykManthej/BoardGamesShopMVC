@model BoardGamesShopMVC.Application.ViewModels.Cart.CartDetailsVm

@{
    ViewData["Title"] = "ViewCart";
}

<h1>ViewCart</h1>

<div>
    <h4>CartDetailsVm</h4>
    <a asp-area="" asp-controller="Cart" asp-action="ViewCart">Calculate</a>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
