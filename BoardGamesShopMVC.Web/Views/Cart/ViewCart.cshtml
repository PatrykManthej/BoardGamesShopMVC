@model BoardGamesShopMVC.Application.ViewModels.Cart.CartDetailsVm

@{
    ViewData["Title"] = "ViewCart";
}
<form method="post">
    <br/>
    <div class="container">
        <div class="card">
            <div class="card-header ml-0 header-color">
                <div class="row">
                    <div class="col-6  pt-2">
                        Shopping Cart
                    </div>
                </div>
            </div>

            <div class="card-body">
                @foreach (var item in Model.CartItems)
                {
                    <div class="row">
                        <div class="d-none d-lg-block col-lg-1 text-center py-2">
                            <img src="@item.ImageUrl" class="rounded" width="100%"/>
                        </div>
                        <div class="col-12 col-lg-6 pt-md-3">
                            <h5>
                                <strong>@item.Name</strong>
                            </h5>
                        </div>
                        <div class="col-12  col-lg-5 text-center row">
                            <div class="col-4 text-md-right pt-4">
                                <h6>
                                    <strong>
                                        @item.Price.ToString("C")
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.Quantity
                                    </strong>
                                </h6>
                            </div>
                            <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="Plus" asp-controller="Cart" asp-route-cartItemId="@item.Id" class="btn btn-primary">
                                        <i class="bi bi-plus-square"></i>
                                    </a> &nbsp;
                                    <a asp-action="Minus" asp-controller="Cart" asp-route-cartItemId="@item.Id" class="btn btn-warning">
                                        <i class="bi bi-dash-square"></i>
                                    </a>
                                </div>

                            </div>
                            <div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
                                <a asp-action="Delete" asp-controller="Cart" asp-route-cartItemId="@item.Id" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr/>
                }
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between me-4 header-color">
                                <span> Total (PLN)</span>
                                <strong>@Model.TotalAmount.ToString("C")</strong>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="card-footer">
                <div class="card-footer row">
                    <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                        <div class="w-100 btn-group" role="group">
                            <a asp-action="CartSummary" asp-controller="Cart" class="btn btn-success form-control">Summary</a> &nbsp;
                            <a asp-action="Index" asp-controller="BoardGame" class="btn btn-secondary form-control">Continue Shopping</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>