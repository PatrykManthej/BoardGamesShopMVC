@model BoardGamesShopMVC.Application.ViewModels.BoardGame.ListBoardGameForListVm

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddBoardGame">Create New</a>
</p>
<form asp-action="Index" asp-controller="BoardGame" method="post">
    <div class="row">
        <input type="text" asp-for="SearchString" name="searchString" id="searchString"/>
        <input type="submit" value="Wyszukaj"/>
    </div>
    <div class="row">
        <table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BoardGames) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditBoardGame", new { id=item.Id }) |
                @Html.ActionLink("Details", "ViewBoardGame", new { boardGameId=item.Id}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
    <div class="row">
        <table>
            <tr>
                @for(int i=1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
                {
                    <td>
                        @if (i != Model.CurrentPage)
                        {
                            <a href="javascript:PagerClick(@i)">@i</a>
                        }
                        else
                        {
                            <span>@i</span>
                        }
                    </td>
                }
            </tr>
        </table>
        <input type="hidden" name="pageNo" id="pageNo"/>
        <input type="hidden" name="pageSize" id="pageSize" value="5"/>
    </div>
</form>
@section Scripts{
    <script type="text/javascript">
function PagerClick(index) 
{
    document.getElementById("pageNo").value = index;
    document.forms[0].submit();
}
</script>
}
