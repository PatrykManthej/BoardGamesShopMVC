@model BoardGamesShopMVC.Application.ViewModels.BoardGame.ListBoardGameForListVm
@{
    ViewData["Title"] = "Index2";
}

<h1>Index2</h1>

<div class="row">
    @foreach (var item in Model.BoardGames)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid; border-radius: 5px;">
                    <div class="card">
                        <div style="height" class="mh-25 mw-100">
                        <img src="@item.ImageUrl" class="card-img-top"/>
                        </div>
                        <div class="card-body">
                            <p class="card-title h5">@item.Name</p>
                        </div>
                        <div>
                            <p>Cena: <b>@item.Price</b> </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
