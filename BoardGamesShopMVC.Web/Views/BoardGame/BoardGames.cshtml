@model BoardGamesShopMVC.Application.ViewModels.BoardGame.ListBoardGameForListVm

@{
    ViewData["Title"] = "BoardGames";
}

<h1>Board games</h1>

<div class="row pb-3">
    <div class="col">
    <a class="btn btn-success" asp-controller="BoardGame" asp-action="AddBoardGame">Create</a>
    </div>
</div>
<form asp-action="BoardGames" asp-controller="BoardGame" method="post">
    <div class="row">
        <div class="col-3">
            <input asp-for="SearchString" class="form-control" type="search" placeholder="Search" name="searchString" id="searchString" />
        </div>
        <div class="col-3 p-0">
            <button class="btn btn-warning" type="submit">Search</button>
        </div>
        <input type="hidden" name="pageNo" id="pageNo" />
        <input type="hidden" name="pageSize" id="pageSize" value="10" />
    </div>
</form>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Language
                </th>
                <th>
                    In stock
                </th>
                <th>
                    Image
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BoardGames)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LanguageVersion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InStock)
                    </td>
                    <td>
                        <img src="@item.ImageUrl" height="70" />
                    </td>
                    <td>
                        <a asp-action="EditBoardGame" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="ViewBoardGame" class="btn btn-primary" asp-route-id="@item.Id">Details</a>
                        <a asp-action="DeleteBoardGame" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <ul class="pagination">
        @for (int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
        {
            <li>
                @if (i != Model.CurrentPage)
                {
                    <a href="javascript:PagerClick(@i)">@i</a>
                }
                else
                {
                    <span>@i</span>
                }
            </li>
        }
    </ul>
</div>
@section Scripts{
    <script type="text/javascript">
        function PagerClick(index) {
            document.getElementById("pageNo").value = index;
            document.forms[0].submit();
        }
    </script>
}
